<h1>List of Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %> (<%= restaurant.address %>) - <%= "*" * restaurant.rating %> </li>
  <% end %>
</ul>

<p>Search for a specific category</p>
<form action="/restaurants" method="get">
  <input type="text" name="category" placeholder="japanese">
  <input type="submit">
</form>

<p>Create a new restaurant</p>
<form action="/restaurants" method="post"></form>
